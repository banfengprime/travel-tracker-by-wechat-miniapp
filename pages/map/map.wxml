<map
  id="map"
  latitude="{{center.latitude}}"
  longitude="{{center.longitude}}"
  markers="{{markers}}"
  polyline="{{polyline}}"
  bindmarkertap="onMarkerTap"
  style="width:100%;height:100vh"
/>
<!-- 底部信息卡片 -->
<view wx:if="{{activeMarker}}" class="bottom-card">
  <image src="{{activeMarker.path}}" class="thumb"/>
  <text>{{activeMarker.displayTime}}</text>
</view>




